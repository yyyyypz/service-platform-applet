.index_swiper swiper {
  width: 750rpx;
  height: 375rpx;
}
.index_swiper swiper swiper-item image {
  width: 100%;
}
.index_bigType {
  padding-top: 20rpx;
  background-color: #F7F7F7;
}
.index_bigType .bigTypeRow {
  display: flex;
}
.index_bigType .bigTypeRow navigator {
  flex: 1;
}
.index_bigType .bigTypeRow navigator image {
  width: 185rpx;
}
.index_bigType .bigTypeRow navigator .modelName {
  width: 185rpx;
  margin-left: 39rpx;
  color: #0f0d0d;
}
.index_hotProduct .hotProduct_title {
  font-size: 32rpx;
  font-weight: 600;
  padding: 20rpx;
  color: var(--themeColor);
  background-color: #e0e0e0;
}
.index_hotProduct .hotProduct_list {
  display: flex;
  flex-wrap: wrap;
}
.index_hotProduct .hotProduct_list .product_detail {
  margin: 15rpx;
  text-align: center;
  width: 46%;
}
.index_hotProduct .hotProduct_list .product_detail navigator image {
  width: 100%;
  background-color: #f5f5f5;
}
.index_hotProduct .hotProduct_list .product_detail navigator .product_name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.index_hotProduct .hotProduct_list .product_detail navigator .product_price {
  color: var(--themeColor);
}
